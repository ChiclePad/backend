                                <String fx:value="text"/>
                                <String fx:value="white-text"/>
                            </styleClass>
                        </Label>
                        <FontAwesomeIcon fx:id="userIcon" fill="WHITE" iconName="USER" selectionEnd="1"
                                         selectionStart="1" size="1.5em">
                            <HBox.margin>
                                <Insets left="15.0"/>
                            </HBox.margin>
                        </FontAwesomeIcon>
                    </children>
                </HBox>
            </right>
        </BorderPane>
    </children>
</AnchorPane>
