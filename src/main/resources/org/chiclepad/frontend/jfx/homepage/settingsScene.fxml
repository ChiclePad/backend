                            <font>
                                <Font size="22.0"/>
                            </font>
                            <styleClass>
                                <String fx:value="text"/>
                                <String fx:value="large-text"/>
                            </styleClass>
                            <VBox.margin>
                                <Insets bottom="25.0" top="15.0"/>
                            </VBox.margin>
                        </JFXPasswordField>
                        <JFXTextField fx:id="nameTextField" focusColor="#8DC44E" labelFloat="true" promptText="Name"
                                      unFocusColor="#464947">
                            <font>
                                <Font size="22.0"/>
                            </font>
                            <styleClass>
                                <String fx:value="text"/>
                                <String fx:value="large-text"/>
                            </styleClass>
                            <VBox.margin>
                                <Insets bottom="25.0" top="15.0"/>
                            </VBox.margin>
