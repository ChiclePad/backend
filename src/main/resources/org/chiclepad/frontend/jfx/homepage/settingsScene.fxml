                            <VBox.margin>
                                <Insets bottom="30.0" top="15.0"/>
                            </VBox.margin>
                            <styleClass>
                                <String fx:value="text"/>
                                <String fx:value="large-text"/>
                            </styleClass>
                        </JFXComboBox>
                        <JFXButton buttonType="RAISED" ripplerFill="#151f80" text="Save">
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </JFXButton>
                    </children>
                    <padding>
                        <Insets bottom="50.0" left="50.0" right="50.0" top="30.0"/>
                    </padding>
                </VBox>
            </children>
