            <left>
                <HBox alignment="CENTER_LEFT" onMousePressed="#switchToHomeScene" styleClass="link"
                      BorderPane.alignment="CENTER">
                    <children>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../white-logo.png"/>
                            </image>
                            <HBox.margin>
                                <Insets bottom="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </ImageView>
                        <Label text="ChiclePad">
                            <styleClass>
                                <String fx:value="huge-text"/>
                                <String fx:value="text"/>
                                <String fx:value="white-text"/>
                                <String fx:value="raised"/>
                            </styleClass>
                            <font>
                                <Font size="10.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
            </left>
            <styleClass>
                <String fx:value="raised"/>
                <String fx:value="green-background"/>
