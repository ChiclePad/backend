                <VBox alignment="CENTER_LEFT" prefHeight="350.0" AnchorPane.bottomAnchor="210.0"
                      AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="30.0">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <styleClass>
                        <String fx:value="form"/>
                        <String fx:value="raised"/>
                    </styleClass>
                    <children>
