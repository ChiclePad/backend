              AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="45.0">
            <children>
                <HBox alignment="CENTER_LEFT" onMousePressed="#switchToHomeScene">
                    <children>
                        <FontAwesomeIcon fx:id="todoIcon1" fill="#464947" iconName="HOME" selectionEnd="1"
                                         selectionStart="1" size="1.5em">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </FontAwesomeIcon>
                        <Label fx:id="todoLabel1" text="Home" textFill="#dddddd">
                            <styleClass>
                                <String fx:value="text-on-grey"/>
                                <String fx:value="normal-text"/>
                            </styleClass>
                            <HBox.margin>
                                <Insets left="30.0"/>
                            </HBox.margin>
                            <font>
                                <Font name="System Bold" size="26.0"/>
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                    <styleClass>
                        <String fx:value="link"/>
                        <String fx:value="grey-dark-background-hover"/>
                    </styleClass>
                </HBox>
                <HBox alignment="CENTER_LEFT" onMousePressed="#switchToTodoScene">
                    <children>
                        <FontAwesomeIcon fx:id="todoIcon" fill="#464947" iconName="LIST_UL" selectionEnd="1"
                                         selectionStart="1" size="1.5em">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </FontAwesomeIcon>
                        <Label fx:id="todoLabel" text="To-Dos" textFill="#dddddd">
                            <styleClass>
                                <String fx:value="text-on-grey"/>
                                <String fx:value="normal-text"/>
                            </styleClass>
                            <HBox.margin>
                                <Insets left="30.0"/>
                            </HBox.margin>
                            <font>
                                <Font name="System Bold" size="26.0"/>
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                    <styleClass>
                        <String fx:value="link"/>
                        <String fx:value="grey-dark-background-hover"/>
                    </styleClass>
                </HBox>
                <HBox alignment="CENTER_LEFT" onMousePressed="#switchToGoalScene">
                    <children>
                        <FontAwesomeIcon fx:id="goalsIcon" fill="#464947" iconName="TROPHY" size="1.5em" text="ï‚‘">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </FontAwesomeIcon>
                        <Label fx:id="goalsLabel" text="Goals">
                            <HBox.margin>
                                <Insets left="30.0"/>
